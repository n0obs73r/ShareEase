<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_black"
    android:backgroundTint="@color/custom_black"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_marginTop="1dp"
    tools:context=".SignUpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="@color/dark_orange"
            android:textSize="40sp"
            android:fontFamily="@font/baloo_paaji"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_gravity="start"
            android:layout_height="100dp"
            android:layout_margin="-10dp"
            android:src="@drawable/shareez"
            android:contentDescription="@string/appname" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_orange"
        android:text="Name" />

    <EditText
        android:id="@+id/name"
        android:layout_marginStart="10dp"
        android:textColor="@color/light_orange"
        android:textColorHint="@color/light_orange"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/dark_orange"
        android:layout_height="wrap_content"
        android:text="Date of Birth" />

    <EditText
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:textColor="@color/light_orange"
        android:textColorHint="@color/light_orange"
        android:backgroundTint="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_orange"
        android:text="Address" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/light_orange"
        android:textColorHint="@color/light_orange"
        android:backgroundTint="@color/white"
        android:inputType="textPostalAddress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_orange"
        android:text="Mobile No" />

    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/light_orange"
        android:textColorHint="@color/light_orange"
        android:backgroundTint="@color/white"
        android:inputType="phone" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_orange"
        android:text="Car Name" />

    <EditText
        android:id="@+id/carname"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/light_orange"
        android:textColorHint="@color/light_orange"
        android:backgroundTint="@color/white"
        android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_orange"
        android:text="Car Number" />

    <EditText
        android:id="@+id/carnumber"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/light_orange"
        android:textColorHint="@color/light_orange"
        android:backgroundTint="@color/white"
        android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_orange"
        android:text="Email " />


    <EditText
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/light_orange"
        android:textColorHint="@color/light_orange"
        android:backgroundTint="@color/white"
        android:inputType="textEmailAddress" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_orange"
        android:text="Password" />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/light_orange"
        android:textColorHint="@color/light_orange"
        android:backgroundTint="@color/white"
        android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:id="@+id/displaypfp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/male"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/light_orange"/>

<!--        <ImageView-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="100dp"-->
<!--            android:id="@+id/displaypfp"-->
<!--            />-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to Select Profile Picture"
        android:backgroundTint="@color/dark_orange"
        android:textColor="@color/custom_black"
        android:layout_margin="7dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/pfp"/>

    </LinearLayout>


    <Button
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_gravity="center"
        android:text="Signup" />

</LinearLayout>